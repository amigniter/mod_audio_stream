# Local WS server that FreeSWITCH connects to
HOST="0.0.0.0"
PORT="8765"

# TLS CA bundle for outbound OpenAI WSS
WSS_PEM="./wss.pem"

# OpenAI
OPENAI_API_KEY=""
OPENAI_REALTIME_MODEL="gpt-4o-realtime-preview"
OPENAI_REALTIME_VOICE="alloy"
# OPENAI_WSS_INSECURE="0"  # dev only

# Audio contract (match your mod_audio_stream start args)
FS_FRAME_MS="20"
FS_SAMPLE_RATE="16000"
FS_CHANNELS="1"
FS_OUT_SAMPLE_RATE="16000"  # or 8000 if your session uses 8k

# Bridge tuning
PLAYOUT_PREBUFFER_MS="200"
PLAYOUT_TARGET_BUFFER_MS="350"   # keep ~350ms buffered for smooth playback
PLAYOUT_MAX_DRAIN_FRAMES="2"     # soft-drain when buffer grows too large
PLAYOUT_MAX_BUFFER_MS="2500"     # hard cap to bound latency
PLAYOUT_CATCHUP_MAX_MS="0"       # avoid catch-up speed artifacts
PLAYOUT_SLEEP_GRANULARITY_MS="5"
RESPONSE_MIN_INTERVAL_MS="400"

# Item-mode safety (only used when OPENAI_INPUT_MODE=item)
OPENAI_ITEM_MAX_BUFFER_MS="12000"

# Protocol
FS_SEND_JSON_AUDIO="1"
FS_SEND_JSON_HANDSHAKE="1"

# Debug
SEND_TEST_TONE="0"
